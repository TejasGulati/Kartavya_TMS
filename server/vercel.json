{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "index.js",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
      }
    ],
    "env": {
      "NODE_ENV": "production",
      "MONGODB_URI": "@your-mongodb-uri",
      "JWT_SECRET": "@your-jwt-secret",
      "JWT_EXPIRE": "7d",
      "MAX_FILE_SIZE": "5242880",
      "UPLOAD_PATH": "uploads",
      "CORS_ORIGIN": "https://your-frontend-url.vercel.app"
    }
  }